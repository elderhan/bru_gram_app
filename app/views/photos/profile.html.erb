<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-md-6">
            <h1 class="page-header">General Feed
                <small>Photos for All Users</small>
            </h1>
        </div>
        <div class="col-md-3">
            <h1 class="page-header"><%=link_to "Upload New Photo", new_photo_path %> </h1>
        </div>
        <div class="col-md-3">
            <h1 class="page-header"><%=link_to "Home", photos_path %> </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Project Template -->
    <% @photos.each do |photo| %>
        <% if own_photo?(photo) %>
            <div class="row">
                <div class="col-md-7">
                    <a href="/photos/<%=photo.id%>">
                        <img class="img-responsive" src="<%=photo.image%>" alt="">
                    </a>
                </div>
                <div class="col-md-5">
                    <h3><%=photo.caption%></h3>
                    <h4><%= link_to "Edit", edit_photo_path(photo) %></h4>
                    <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
            </div>
            <br>
            <br>
        <% end %>
    <% end %>

    <hr>


    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">&laquo;</a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li>
                    <a href="#">2</a>
                </li>
                <li>
                    <a href="#">3</a>
                </li>
                <li>
                    <a href="#">4</a>
                </li>
                <li>
                    <a href="#">5</a>
                </li>
                <li>
                    <a href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
</div>

